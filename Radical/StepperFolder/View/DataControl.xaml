<UserControl x:Class="Stepper.DataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Stepper"
             mc:Ignorable="d">
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Name="VarName" Text="Variable" FontSize="16" Foreground="Gray"
                     Grid.Column="0" Width="Auto" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0"
                     Visibility="Visible"
                     ></TextBlock>

        <TextBlock Name="ValueText" Grid.Column="1" Text="0.00" FontSize="16" Foreground="DarkGray"
                     Width="Auto" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0"
                     ></TextBlock>
    </Grid>
</UserControl>
